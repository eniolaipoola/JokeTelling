<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/variantTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/variant_text_view"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/variantDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/variant_description"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/variantTextView"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/getJokeButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/joke_text_view"
        android:text="@string/button_text"
        app:layout_constraintTop_toBottomOf="@+id/variantDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        android:gravity="center"
        android:background="@color/colorAccent" />

    <!--<com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
